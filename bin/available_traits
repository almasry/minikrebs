#!/bin/sh
# shows available traits
# $1 can be a different trait dir
HERE=$(dirname $(readlink -f $0))

indent() {
    while read line;do
    yes ' ' | head -${1:-4} | tr -d '\n'
    echo $line
    done
}
usage (){
    cat << EOF
usage: $0 [TRAIT_DIR]

ENVIRONMENT:
        SHOW_FILES  -- shows all files provided by profile
EOF
}

[ "$1" = "--help" ] && usage && exit 0

cd ${1:-${HERE}/../traits}
shift
echo "Available traits:"
find . | while read line; do 
    if [ -e "$line/MANIFEST" -o -e "$line/files" ];then
        echo "$line" | indent 2
        if [ -e "$line/MANIFEST" ];then
            source "$line/MANIFEST"
            echo "Includes Packages: $PACKAGES" | indent 4
        fi
        if [ -e "$line/files" -a -n "${SHOW_FILES:-}" ];then
            echo "Includes Files: " | indent 4
            cd "$line/files"
            find  * | indent 6
            cd - >/dev/null
        fi
        
    fi
done
